%section.user_edit
  .container
    .row
      .col-12
        %h2 Editing screen
      .col-12.content
        = form_for @user do |f|
          .field
            = f.label :user_name, class: "label"
            = f.text_field :user_name, class: "input"
          .field
            = f.label :email, class: "label"
            = f.text_field :email, class: "input"
          .field
            = f.label :profile, class: "label"
            = f.text_area :profile, class: "input profile"
          .field
            = f.label :profile_image, class: "label"
            = f.file_field :profile_image, class: "input_image"

          = f.submit value: "更新", class: "submit_box" 
